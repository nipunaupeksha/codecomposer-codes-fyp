#include "stdio.h"
#include <math.h> /*Definitions for math library*/


void coherence(){
	const int fs = 16000; /*16 kHz sampling rate*/ 
	float frameLength = floorf(20 * fs/ 1000); /*Frame length*/
	
	if(frameLength/2 != floorf(frameLength/2)){ /*If integer division of frameLength/2 is not equal to float division with floor function then add 1 to frameLength*/
		frameLength = frameLength + 1;
	}
}

